# ===========================================
# PRODUCTION ENVIRONMENT - TEMPLATE
# ===========================================
# Copy this to .env.production and fill in real values
# ===========================================

NODE_ENV=production
PORT=5000

# Database - Docker service or production MongoDB
# For Docker: mongodb://mongo:27017/ecomart
# For Atlas: mongodb+srv://prod-user:password@cluster.mongodb.net/ecomart
MONGO_URI=mongodb://mongo:27017/ecomart

# RabbitMQ - Docker service name
RABBITMQ_URL=amqp://admin:admin@rabbitmq:5672

# JWT Configuration (CHANGE THIS!)
JWT_SECRET=generate_a_secure_random_string_here
JWT_EXPIRES_IN=7d

# Stripe Production Keys
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_production_webhook_secret

# Frontend URL
FRONTEND_URL=https://your-production-domain.com

# Email Configuration
EMAIL_USER=your-production-email@domain.com
EMAIL_PASS=your-production-email-password
